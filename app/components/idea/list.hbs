{{#if this.sortedIdeas}}
  <PaperCard>
    <PaperList>
      <PaperItem class="md-2-line">
        <PaperInput
          @label="Search"
          @value={{this.filter}}
          @onChange={{action (mut this.filter)}}
          class="flex"
        />
      </PaperItem>
      {{#each this.filteredIdeas as |idea|}}
        <Idea::ListItem @idea={{idea}} />
      {{/each}}
    </PaperList>
  </PaperCard>
{{/if}}
