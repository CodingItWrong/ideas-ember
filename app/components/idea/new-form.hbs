<PaperCard as |Card|>
  <PaperToolbar as |Toolbar|>
    <Toolbar.tools>
      <h2>Ideas</h2>
      <span class="flex"></span>
      <PaperButton
        @onClick={{action (mut this.isAdding) true}}
        data-test-add-idea-button
      >
        Add
      </PaperButton>
    </Toolbar.tools>
  </PaperToolbar>
  {{#if this.isAdding}}
    <PaperForm @onSubmit={{this.createIdea}} as |Form|>
      <Card.content>
        <Form.input
          @textarea={{true}}
          @block={{true}}
          @label="New Idea"
          @value={{this.summary}}
          @onChange={{action (mut this.summary)}}
          @passThru={{hash autocapitalize="sentences"}}
          data-test-idea-summary-field
        />
        <button
          type="submit"
          class="btn btn-primary text-dark"
          data-test-save-idea-button
        >
          Save
        </button>
        <button
          type="button"
          class="btn btn-light"
          {{on "click" (action (mut this.isAdding) false)}}
        >
          Cancel
        </button>
      </Card.content>
    </PaperForm>
  {{/if}}
</PaperCard>
