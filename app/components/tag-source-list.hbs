<PaperCard as |Card|>
  <PaperToolbar as |Toolbar|>
    <Toolbar.tools>
      <h2>Sources</h2>
      <span class="flex"></span>
      <PaperButton @onClick={{fn (mut this.isAdding) true}}>
        Add
      </PaperButton>
    </Toolbar.tools>
  </PaperToolbar>
  {{#if this.isAdding}}
    <Card.content>
      <form {{on "submit" this.addSourceToTag}}>
        <div>
          <PaperSelect
            @block={{true}}
            @label="Sources"
            @options={{this.sortedSources}}
            @selected={{this.sourceToAdd}}
            @onChange={{fn (mut this.sourceToAdd)}}
            as |source|
          >
            {{source.title}} - {{source.author.name}}
          </PaperSelect>
        </div>
        <button
          type="submit"
          class="btn btn-primary text-dark"
        >
          Save
        </button>
        <button
          type="button"
          class="btn btn-light"
          {{on "click" this.cancelAdd}}
        >
          Cancel
        </button>
      </form>
    </Card.content>
  {{/if}}
  {{#each this.sortedTagSources as |source|}}
    <PaperItem @onClick={{fn this.navigateToSource source}} class="md-2-line" as |Controls|>
      <div class="md-list-item-text">
        <h3 class="preserve-line-breaks">{{source.title}}</h3>
        <h4>{{source.author.name}}</h4>
      </div>
      <div class="md-secondary-container">
        <Controls.button
          @secondary={{true}}
          @iconButton={{true}}
          @onClick={{fn this.promptToRemoveSource source}}
        >
          {{paper-icon "delete"}}
        </Controls.button>
      </div>
    </PaperItem>
  {{/each}}
</PaperCard>
