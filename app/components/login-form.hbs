<PaperCard as |Card|>
  <PaperForm @onSubmit={{this.logIn}} as |Form|>
    <Card.content>
      {{#if this.errorMessage}}
        <div
          class="alert alert-danger"
          role="alert"
          data-test-error-message
        >
          {{this.errorMessage}}
        </div>
      {{/if}}
      <Form.input
        @type="email"
        @passThru={{hash name="email"}}
        @block={{true}}
        @label="Email"
        @value={{this.email}}
        @onChange={{action (mut this.email)}}
      />
      <Form.input
        @passThru={{hash name="password"}}
        @block={{true}}
        @type="password"
        @label="Password"
        @value={{this.password}}
        @onChange={{action (mut this.password)}}
      />
    </Card.content>
    <Card.actions>
      <button
        type="submit"
        class="btn btn-primary text-dark"
      >
        Log In
      </button>
    </Card.actions>
  </PaperForm>
</PaperCard>
