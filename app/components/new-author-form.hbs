<PaperCard as |Card|>
  <PaperToolbar as |Toolbar|>
    <Toolbar.tools>
      <h2>Authors</h2>
      <span class="flex"></span>
      <PaperButton @onClick={{action (mut this.isAdding) true}} data-test-add-author-button>
        Add
      </PaperButton>
    </Toolbar.tools>
  </PaperToolbar>
  {{#if this.isAdding}}
    <PaperForm @onSubmit={{this.createAuthor}} as |Form|>
      <Card.content>
        <Form.input
          @block={{true}}
          @label="New Author"
          @value={{this.name}}
          @onChange={{action (mut this.name)}}
          @passThru={{hash autocapitalize="sentences"}}
          data-test-author-name-field
        />
        <Form.submit-button
          @raised={{true}}
          @primary={{true}}
          data-test-save-author-button
        >
          Save
        </Form.submit-button>
        <PaperButton @onClick={{action (mut this.isAdding) false}}>
          Cancel
        </PaperButton>
      </Card.content>
    </PaperForm>
  {{/if}}
</PaperCard>
