<PaperCard as |Card|>
  {{#if this.sortedSources}}
    <div class="list-group">
      <div class="list-group-item">
        <div class="form-group">
          <Input
            @value={{this.filter}}
            class="form-control"
            placeholder="Search"
            autocapitalize="sentences"
          />
        </div>
      </div>
      {{#each this.filteredSources as |source|}}
        {{#if (has-block)}}
          <Source::ListItem @source={{source}}>
            {{yield source}}
          </Source::ListItem>
        {{else}}
          <Source::ListItem @source={{source}} />
        {{/if}}
      {{/each}}
    </div>
  {{else}}
    <Card.content>
      <p>No sources added yet.</p>
    </Card.content>
  {{/if}}
</PaperCard>
