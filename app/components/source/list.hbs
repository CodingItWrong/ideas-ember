<PaperCard as |Card|>
  {{#if this.sortedSources}}
    <PaperList>
      <PaperItem class="md-2-line">
        <PaperInput
          @label="Search"
          @value={{this.filter}}
          @onChange={{action (mut this.filter)}}
          class="flex"
        />
      </PaperItem>
      {{#each this.filteredSources as |source|}}
        {{#if (has-block)}}
          <Source::ListItem @source={{source}}>
            {{yield source}}
          </Source::ListItem>
        {{else}}
          <Source::ListItem @source={{source}} />
        {{/if}}
      {{/each}}
    </PaperList>
  {{else}}
    <Card.content>
      <p>No sources added yet.</p>
    </Card.content>
  {{/if}}
</PaperCard>
