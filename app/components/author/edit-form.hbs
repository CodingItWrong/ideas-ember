<PaperForm @onSubmit={{this.save}} as |Form|>
  <Form.input
    @block={{true}}
    @type="text"
    @placeholder="Author Name"
    @value={{this.editedName}}
    @onChange={{action (mut this.editedName)}}
    @passThru={{hash autocapitalize="sentences"}}
    data-test-name
  />
  <Form.input
    @block={{true}}
    @type="text"
    @placeholder="Affiliation"
    @value={{this.editedAffiliation}}
    @onChange={{action (mut this.editedAffiliation)}}
    @passThru={{hash autocapitalize="sentences"}}
    data-test-affiliation
  />
  <button
    type="submit"
    class="btn btn-primary text-dark"
    data-test-save-button
  >
    Save
  </button>
  <button
    type="button"
    class="btn btn-danger"
    data-test-delete-button
    {{on "click" this.delete}}
  >
    Delete
  </button>
  <button
    type="button"
    class="btn btn-light"
    data-test-cancel-button
    {{on "click" @onCancel}}
  >
    Cancel
  </button>
</PaperForm>
