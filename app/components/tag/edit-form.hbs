<PaperForm @onSubmit={{this.save}} as |Form|>
  <Form.input
    @block={{true}}
    @type="text"
    @placeholder="Tag Name"
    @value={{this.editedTagName}}
    @onChange={{action (mut this.editedTagName)}}
    @passThru={{hash autocapitalize="sentences"}}
  />
  <Form.submit-button
    @primary={{true}}
    @raised={{true}}
    @onClick={{this.save}}
  >
    Save
  </Form.submit-button>
  <PaperButton @warn={{true}} @onClick={{this.delete}}>
    Delete
  </PaperButton>
  <PaperButton @onClick={{this.cancelEditing}}>
    Cancel
  </PaperButton>
</PaperForm>
