<nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <a class="navbar-brand" href="#">
    Tags
  </a>
  <span class="flex-fill"></span>
  <PaperButton @onClick={{action (mut this.isAdding) true}}>
    Add
  </PaperButton>
</nav>

{{#if this.isAdding}}
  <div class="card">
    <form {{on "submit" this.createTag}}>
      <div class="card-body">
        <div class="form-group">
          <label for="tag-name-field">
            New Tag
          </label>
          <Input
            @value={{this.name}}
            id="tag-name-field"
            class="form-control"
            autocapitalize="sentences"
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary text-dark"
        >
          Save
        </button>
        <button
          type="button"
          class="btn btn-light"
          data-test-cancel-button
          {{on "click" (action (mut this.isAdding) false)}}
        >
          Cancel
        </button>
      </div>
    </form>
  </div>
{{/if}}
