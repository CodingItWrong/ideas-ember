<PaperCard as |Card|>
  <PaperToolbar as |Toolbar|>
    <Toolbar.tools>
      <h2>Tags</h2>
      <span class="flex"></span>
      <PaperButton @onClick={{action (mut this.isAdding) true}} data-test-add-author-button>
        Add
      </PaperButton>
    </Toolbar.tools>
  </PaperToolbar>
  {{#if this.isAdding}}
    <PaperForm @onSubmit={{this.createTag}}>
      <Card.content>
        <div class="form-group">
          <label for="tag-name-field">
            New Tag
          </label>
          <Input
            @value={{this.name}}
            id="tag-name-field"
            class="form-control"
            autocapitalize="sentences"
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary text-dark"
        >
          Save
        </button>
        <button
          type="button"
          class="btn btn-light"
          data-test-cancel-button
          {{on "click" (action (mut this.isAdding) false)}}
        >
          Cancel
        </button>
      </Card.content>
    </PaperForm>
  {{/if}}
</PaperCard>
