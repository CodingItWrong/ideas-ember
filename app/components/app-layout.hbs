<LayoutContainer @title="Ideas" @titleLinkRoute="index" as |layout|>
  <layout.toolbar
    @showSideNavToggle={{this.session.isAuthenticated}}
    @titleLinkRoute="index"
  >
    {{#if this.session.isAuthenticated}}
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a
            class="nav-link"
            href="#"
            {{on "click" this.signOut}}
          >
            Sign Out
          </a>
        </li>
      </ul>
    {{/if}}
  </layout.toolbar>
  <layout.body as |body|>
    <body.sidenav>
      {{#if this.session.isAuthenticated}}
        <div class="list-group">
          <LinkTo
            @route="index"
            {{on "click" layout.hideSideNav}}
            class="list-group-item list-group-item-action text-dark"
          >
            Ideas
          </LinkTo>
          <LinkTo
            @route="sources"
            {{on "click" layout.hideSideNav}}
            class="list-group-item list-group-item-action text-dark"
          >
            Sources
          </LinkTo>
          <LinkTo
            @route="authors"
            {{on "click" layout.hideSideNav}}
            class="list-group-item list-group-item-action text-dark"
            data-test-authors-nav-link
          >
            Authors
          </LinkTo>
          <LinkTo
            @route="tags"
            {{on "click" layout.hideSideNav}}
            class="list-group-item list-group-item-action text-dark"
          >
            Tags
          </LinkTo>
        </div>
      {{/if}}
    </body.sidenav>
    <body.content>
      <div class="container">
        <div class="row">
          <div class="d-none d-xl-block col-xl-1"></div>
          <div class="col-12 col-xl-10 mt-3">
            {{yield}}
          </div>
          <div class="d-none d-xl-block col-xl-1"></div>
        </div>
      </div>
    </body.content>
  </layout.body>
</LayoutContainer>
