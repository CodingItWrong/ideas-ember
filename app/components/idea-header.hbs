<PaperCard as |Card|>
  {{#if this.editing}}
    <PaperToolbar as |Toolbar|>
      <Toolbar.tools>
        <h2>Idea</h2>
      </Toolbar.tools>
    </PaperToolbar>
    <Card.title as |Title|>
      <Title.text>
        <EditIdeaForm
          @idea={{@idea}}
          @onSave={{this.handleSave}}
          @onCancel={{this.handleCancel}}
          @onDelete={{this.handleDelete}}
        />
      </Title.text>
    </Card.title>
  {{else}}
    <PaperToolbar as |Toolbar|>
      <Toolbar.tools>
        <h2>{{@idea.summary}}</h2>
        <span class="flex"></span>
        <PaperButton @iconButton={{true}} @onClick={{this.startEditing}}>
          {{paper-icon "edit"}}
        </PaperButton>
      </Toolbar.tools>
    </PaperToolbar>
    {{#if @idea.comments}}
      <Card.content>
        {{@idea.comments}}
      </Card.content>
    {{/if}}
  {{/if}}
</PaperCard>
