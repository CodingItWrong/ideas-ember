<BackButton @to="sources" />

<PaperCard as |Card|>
  <Card.title as |Title|>
    <Title.text as |Text|>
      <Text.headline>{{this.model.source.title}}</Text.headline>
      <Text.subhead>{{this.model.source.author.name}}</Text.subhead>
    </Title.text>
  </Card.title>
</PaperCard>

<NewQuoteForm @source={{this.model.source}} />

<QuoteList
  @quotes={{this.model.source.quotes}}
  @ideas={{this.model.ideas}}
/>
