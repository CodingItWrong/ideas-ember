<BackButton @to="sources" />

<PaperCard as |Card|>
  <Card.title as |Title|>
    <Title.text as |Text|>
      <Text.headline>{{this.model.source.title}}</Text.headline>
      <Text.subhead>{{this.model.source.author.name}}</Text.subhead>
    </Title.text>
  </Card.title>
</PaperCard>

<NewQuoteForm
  @ideas={{this.model.ideas}}
  @source={{this.model.source}}
/>

{{#each this.model.source.quotes as |quote|}}
  <QuoteCard
    @quote={{quote}}
    @ideas={{this.model.ideas}}
  >
    {{quote.idea.summary}}
  </QuoteCard>
{{/each}}
