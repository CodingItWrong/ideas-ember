<BackButton @to="index" />

<PaperCard as |Card|>
  <Card.title as |Title|>
    <Title.text as |Text|>
      <Text.headline>{{this.model.summary}}</Text.headline>
    </Title.text>
  </Card.title>
</PaperCard>

{{#each this.model.quotes as |quote|}}
  <PaperCard as |Card|>
    <Card.title as |Title|>
      <Title.text as |Text|>
        <Text.headline>{{quote.text}}</Text.headline>
        <Text.subhead>
          {{quote.source.author.name}},
          {{quote.source.title}}
        </Text.subhead>
      </Title.text>
    </Card.title>
  </PaperCard>
{{/each}}
