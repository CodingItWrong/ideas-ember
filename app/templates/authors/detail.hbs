<BackButton @to="authors" />

<PaperCard as |Card|>
  <Card.title as |Title|>
    <Title.text as |Text|>
      <Text.headline>{{this.model.name}}</Text.headline>
    </Title.text>
  </Card.title>
</PaperCard>

<NewSourceForm @author={{this.model}} />

{{#each this.model.sources as |source|}}
  <SourceCard @source={{source}} />
{{/each}}
