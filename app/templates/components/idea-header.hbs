<PaperCard as |Card|>
  <PaperToolbar as |Toolbar|>
    <Toolbar.tools>
      <h2>Idea</h2>
    </Toolbar.tools>
  </PaperToolbar>
  {{#if this.editing}}
    <Card.title as |Title|>
      <Title.text>
        <PaperForm @onSubmit={{this.save}} as |Form|>
          <Form.input
            @textarea={{true}}
            @block={{true}}
            @placeholder="Idea"
            @value={{this.editedIdeaSummary}}
            @onChange={{action (mut this.editedIdeaSummary)}}
            @passThru={{hash autocapitalize="sentences"}}
          />
          <Form.input
            @textarea={{true}}
            @block={{true}}
            @placeholder="Comments"
            @value={{this.editedIdeaComments}}
            @onChange={{action (mut this.editedIdeaComments)}}
            @passThru={{hash autocapitalize="sentences"}}
          />
          <Form.submit-button
            @primary={{true}}
            @raised={{true}}
            @onClick={{this.save}}
          >
            Save
          </Form.submit-button>
          <PaperButton @onClick={{this.cancelEditing}}>
            Cancel
          </PaperButton>
        </PaperForm>
      </Title.text>
    </Card.title>
  {{else}}
    <Card.title as |Title|>
      <Title.text as |Text|>
        <Text.headline>{{@idea.summary}}</Text.headline>
      </Title.text>
    </Card.title>
    <Card.actions>
      <PaperButton @warn={{true}} @onClick={{this.delete}}>
        Delete
      </PaperButton>
      <PaperButton @onClick={{this.startEditing}}>
        Edit
      </PaperButton>
    </Card.actions>
  {{/if}}
</PaperCard>
