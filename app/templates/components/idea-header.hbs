<PaperCard as |Card|>
  {{#if this.editing}}
    <PaperToolbar as |Toolbar|>
      <Toolbar.tools>
        <h2>Idea</h2>
      </Toolbar.tools>
    </PaperToolbar>
    <Card.title as |Title|>
      <Title.text>
        <PaperForm @onSubmit={{this.save}} as |Form|>
          <Form.input
            @textarea={{true}}
            @block={{true}}
            @placeholder="Idea"
            @value={{this.editedIdeaSummary}}
            @onChange={{action (mut this.editedIdeaSummary)}}
            @passThru={{hash autocapitalize="sentences"}}
          />
          <Form.input
            @textarea={{true}}
            @block={{true}}
            @placeholder="Comments"
            @value={{this.editedIdeaComments}}
            @onChange={{action (mut this.editedIdeaComments)}}
            @passThru={{hash autocapitalize="sentences"}}
          />
          <Form.submit-button
            @primary={{true}}
            @raised={{true}}
            @onClick={{this.save}}
          >
            Save
          </Form.submit-button>
          <PaperButton @warn={{true}} @onClick={{this.delete}}>
            Delete
          </PaperButton>
          <PaperButton @onClick={{this.cancelEditing}}>
            Cancel
          </PaperButton>
        </PaperForm>
      </Title.text>
    </Card.title>
  {{else}}
    <PaperToolbar as |Toolbar|>
      <Toolbar.tools>
        <h2>{{@idea.summary}}</h2>
        <span class="flex"></span>
        <PaperButton @iconButton={{true}} @onClick={{this.startEditing}}>
          {{paper-icon "edit"}}
        </PaperButton>
      </Toolbar.tools>
    </PaperToolbar>
    {{#if @idea.comments}}
      <Card.content>
        {{@idea.comments}}
      </Card.content>
    {{/if}}
  {{/if}}
</PaperCard>
