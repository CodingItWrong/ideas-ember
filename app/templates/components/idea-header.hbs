<PaperCard as |Card|>
  {{#if this.editing}}
    <Card.title as |Title|>
      <Title.text>
        <PaperForm @onSubmit={{this.save}} as |Form|>
          <Form.input
            @type="text"
            @placeholder="Idea"
            @value={{this.editedIdeaSummary}}
            @onChange={{action (mut this.editedIdeaSummary)}}
            @passThru={{hash autocapitalize="sentences"}}
          />
        </PaperForm>
      </Title.text>
    </Card.title>
    <Card.actions>
      <PaperButton @onClick={{this.cancelEditing}}>
        Cancel
      </PaperButton>
      <PaperButton @primary={{true}} @raised={{true}} @onClick={{this.save}}>
        Save
      </PaperButton>
    </Card.actions>
  {{else}}
    <Card.title as |Title|>
      <Title.text as |Text|>
        <Text.headline>{{@idea.summary}}</Text.headline>
      </Title.text>
    </Card.title>
    <Card.actions>
      <PaperButton @onClick={{this.startEditing}}>
        Edit
      </PaperButton>
    </Card.actions>
  {{/if}}
</PaperCard>
