<PaperCard as |Card|>
  <PaperToolbar as |Toolbar|>
    <Toolbar.tools>
      <h2>Quotes</h2>
      <span class="flex"></span>
      <PaperButton @onClick={{action (mut this.isAdding) true}}>
        Add
      </PaperButton>
    </Toolbar.tools>
  </PaperToolbar>
  {{#if this.isAdding}}
    <PaperForm @onSubmit={{this.createQuote}} as |Form|>
      <Card.content>
        <Form.input
          @textarea={{true}}
          @block={{true}}
          @label="New Quote"
          @value={{this.text}}
          @onChange={{action (mut this.text)}}
          @passThru={{hash autocapitalize="sentences"}}
        />
      </Card.content>
      <Card.actions>
        <PaperButton @onClick={{action (mut this.isAdding) false}}>
          Cancel
        </PaperButton>
        <Form.submit-button
          @raised={{true}}
          @primary={{true}}
        >
          Save
        </Form.submit-button>
      </Card.actions>
    </PaperForm>
  {{/if}}
</PaperCard>
