<PaperCard as |Card|>
  <PaperForm @onSubmit={{this.createQuote}} as |Form|>
    <Card.content>
      <Form.input
        @textarea={{true}}
        @block={{true}}
        @label="New Quote"
        @value={{this.text}}
        @onChange={{action (mut this.text)}}
        @passThru={{hash autocapitalize="sentences"}}
      />
      <Form.submit-button
        @raised={{true}}
        @primary={{true}}
      >
        Save
      </Form.submit-button>
    </Card.content>
  </PaperForm>
</PaperCard>
