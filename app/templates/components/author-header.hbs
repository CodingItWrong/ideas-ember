<PaperCard as |Card|>
  {{#if this.editing}}
    <Card.title as |Title|>
      <Title.text>
        <PaperForm @onSubmit={{this.save}} as |Form|>
          <Form.input
            @type="text"
            @placeholder="Author Name"
            @value={{this.editedAuthorName}}
            @onChange={{action (mut this.editedAuthorName)}}
            @passThru={{hash autocapitalize="words"}}
          />
        </PaperForm>
      </Title.text>
    </Card.title>
    <Card.actions>
      <PaperButton @onClick={{action (mut this.editing) false}}>
        Cancel
      </PaperButton>
      <PaperButton @primary={{true}} @raised={{true}} @onClick={{this.save}}>
        Save
      </PaperButton>
    </Card.actions>
  {{else}}
    <Card.title as |Title|>
      <Title.text as |Text|>
        <Text.headline>{{@author.name}}</Text.headline>
      </Title.text>
    </Card.title>
    <Card.actions>
      <PaperButton @onClick={{action (mut this.editing) true}}>
        Edit
      </PaperButton>
    </Card.actions>
  {{/if}}
</PaperCard>
