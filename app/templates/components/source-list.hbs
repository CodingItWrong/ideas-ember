<PaperCard as |Card|>
  {{#if this.sortedSources}}
    <PaperList>
      {{#each this.sortedSources as |source|}}
        {{#if (has-block)}}
          <SourceItem @source={{source}}>
            {{yield source}}
          </SourceItem>
        {{else}}
          <SourceItem @source={{source}} />
        {{/if}}
      {{/each}}
    </PaperList>
  {{else}}
    <Card.content>
      <p>No sources added yet.</p>
    </Card.content>
  {{/if}}
</PaperCard>
