<PaperCard as |Card|>
  <PaperForm @onSubmit={{this.createAuthor}} as |Form|>
    <Card.content>
      <div class="layout-col layout-gt-xs-row">
        <div class="flex-gt-xs-80">
          <Form.input
            @block={{true}}
            @label="New Author"
            @value={{this.name}}
            @onChange={{action (mut this.name)}}
          />
        </div>
        <div class="flex-gt-xs-20">
          <Form.submit-button
            @raised={{true}}
            @primary={{true}}
          >
            Save
          </Form.submit-button>
        </div>
      </div>
    </Card.content>
  </PaperForm>
</PaperCard>
