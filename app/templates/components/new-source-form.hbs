<PaperCard as |Card|>
  <PaperForm @onSubmit={{this.createSource}} as |Form|>
    <Card.content>
      <Form.input
        @type="text"
        @block={{true}}
        @label="New Source"
        @value={{this.title}}
        @onChange={{action (mut this.title)}}
        @passThru={{hash autocapitalize="words"}}
      />
      <Form.input
        @type="url"
        @block={{true}}
        @label="URL"
        @value={{this.url}}
        @onChange={{action (mut this.url)}}
      />
      <Form.submit-button
        @raised={{true}}
        @primary={{true}}
      >
        Save
      </Form.submit-button>
    </Card.content>
  </PaperForm>
</PaperCard>
