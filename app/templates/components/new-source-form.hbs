<PaperCard as |Card|>
  <PaperToolbar as |Toolbar|>
    <Toolbar.tools>
      <h2>Sources</h2>
      <span class="flex"></span>
      <PaperButton @onClick={{action (mut this.isAdding) true}} data-test-add-source-button>
        Add
      </PaperButton>
    </Toolbar.tools>
  </PaperToolbar>
  {{#if this.isAdding}}
    <PaperForm @onSubmit={{this.createSource}} as |Form|>
      <Card.content>
        <Form.input
          @type="text"
          @block={{true}}
          @label="New Source"
          @value={{this.title}}
          @onChange={{action (mut this.title)}}
          @passThru={{hash autocapitalize="words"}}
          data-test-title-field
        />
        <Form.input
          @type="url"
          @block={{true}}
          @label="URL"
          @value={{this.url}}
          @onChange={{action (mut this.url)}}
        />
        <Form.input
          @type="date"
          @block={{true}}
          @label="Date"
          @value={{this.date}}
          @onChange={{action (mut this.date)}}
        />
        <Form.submit-button
          @raised={{true}}
          @primary={{true}}
          data-test-save-source-button
        >
          Save
        </Form.submit-button>
        <PaperButton @onClick={{action (mut this.isAdding) false}}>
          Cancel
        </PaperButton>
      </Card.content>
    </PaperForm>
  {{/if}}
</PaperCard>
