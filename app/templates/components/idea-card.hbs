<PaperCard as |Card|>
  <Card.title as |Title|>
    <Title.text as |Text|>
      <Text.headline @class="preserve-line-breaks">{{@idea.summary}}</Text.headline>
    </Title.text>
  </Card.title>
  <Card.actions>
    <PaperButton @warn={{true}} @onClick={{this.delete}}>
      Delete
    </PaperButton>
    <NavButton @to="ideas" @id={{@idea.id}}>
      Details
    </NavButton>
  </Card.actions>
</PaperCard>
