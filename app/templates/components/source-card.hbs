<PaperCard as |Card|>
  <Card.title as |Title|>
    <Title.text as |Text|>
      <Text.headline>{{@source.title}}</Text.headline>
      <Text.subhead>{{@source.author.name}}</Text.subhead>
    </Title.text>
  </Card.title>
  <Card.actions>
    <NavButton @to="sources.detail" @id={{@source.id}}>
      Details
    </NavButton>
  </Card.actions>
</PaperCard>
